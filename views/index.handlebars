<div class="centercontent">
    <h1>Burger Time!</h1>

    <h2>Add a Burger to be eaten</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="burger">Burger Name:</label>
            <input type="text" id="burger" name="name">
        </div>

        <div class="form-group">
            <label for="devour">Devour this tasty burger?</label><br>
            <input type="radio" name="devour" value="1" checked> Devour!<br>
            <input type="radio" name="devour" value="0"> Save it for later
        </div>

        <button type="submit">Do it</button>
    </form>
</div>

<div class="row">
    <div class="column">
        <h2>Burgers that are still needing to be devoured!!</h2>

        <ul class="green">
            {{#each burgers}}
            {{#unless devour}}
            {{> burgers/burger-block devour=true}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="column">
        <img src="https://static01.nyt.com/images/2019/09/11/dining/09burner1/09burner1-superJumbo.jpg?quality=90&auto=webp"
            alt="burger" height="350" width="570">
    </div>


    <div class="column">
        <h2>Burgers that are about to be devoured!</h2>

        <ul class="red">
            {{#each burgers}}
            {{#if devour}}
            {{> burgers/burger-block devour=false}}
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>