<div class="centercontent">
    <h1>Burgers!</h1>

    <h2>Add a Burger</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="burger">Burger Name:</label>
            <input type="text" id="burger" name="name">
        </div>

        <div class="form-group">
            <label for="devour">Devour this burger?</label><br>
            <input type="radio" name="devour" value="1" checked> devour!<br>
            <input type="radio" name="devour" value="0"> Take a break
        </div>

        <button type="submit">Add burger</button>
    </form>
</div>

<div class="left-content">
    <h2>Burgers that are still needing to be devoured!!</h2>

    <ul>
        {{#each burgers}}
        {{#unless devour}}
        {{> burgers/burger-block devour=true}}
        {{/unless}}
        {{/each}}
    </ul>

</div>






<div class="right-content">
    <h2>Burgers that you have already devoured!</h2>

    <ul>
        {{#each burgers}}
        {{#if devour}}
        {{> burgers/burger-block devour=false}}
        {{/if}}
        {{/each}}
    </ul>
</div>